
<div style="        float: left;
        background-color: #a6d6c9;
        width: 100%;
        height: 60px;
        padding: 10px;">
    <div style="        float: left;
        padding:10px;padding-top:5px
">
        <i class="fa fa-bars fa-2x"></i>
        <span style="font-size:25px;">PM2.5</span>
    </div>
    <div style="float:right;"><img src="~/images/logo.png" height="40" /></div>
</div>
<div style="        float: left;
        width: 20%;
        height: 700px;
        padding: 10px;
        border: solid 1px #cccccc;
    ">
    <div style="width:100%;">系统</div>
    <div style="width: 100%; padding-left: 30px;"><i class="fa fa-user"></i> 用户</div>

    <div style="width:100%;">管理</div>
    <div style="width: 100%; padding-left: 30px;"><a asp-controller="Management" asp-action="Region"><i class="fa fa-home"></i> 区域</a></div>
    <div style="width: 100%; padding-left: 30px;"><a asp-controller="Management" asp-action="Sensor"><i class="fa fa-check-square"></i>传感器</a></div>
    <div style="width: 100%; padding-left: 30px;"><a asp-controller="Management" asp-action="PM2_5"><i class="fa fa-cloud"></i>PM2.5</a></div>
    <div style="width: 100%; padding-left: 30px;"><a asp-controller="Management" asp-action="Quality"><i class="fa fa-recycle"></i>空气质量标准表</a></div>
    <div style="width: 100%; padding-left: 30px;"><a asp-controller="Management" asp-action="PM_standard"><i class="fa fa-leaf"></i>PM2.5标准表</a></div>

</div>
<div style="        float: left;
        border: solid 1px #cccccc;
        border-left: none;
        height: 700px;
        width: 80%
    ">
    <div style="        float: left;
        width: 100%;
        height: 50px;
        padding: 10px;
        border-bottom: solid 1px #cccccc;
">
        <div style="float:left;"><i class="fa fa-user"></i> 用户</div>
        <div style="float:right;">
            <input type="text" style="width:200px;" />
            <input type="button" value="Search" />
        </div>

    </div>
    <div style="float: left;width: 100%; height: 500px; text-align:center;padding:10px;">
        <table>
            <tr>
                <th>@ViewBag.UserNameHead</th>
                <th>@ViewBag.EmailNameHead</th>
                <th>@ViewBag.TimeNameHead</th>
                <th>@ViewBag.AuthorNameHead</th>
                <th>@ViewBag.DelteNameHead</th>
            </tr>

            @foreach (var user in ViewBag.Users)
            {
            <tr>
                <td>@user.UserNameEn</td>
                <td>@user.UserEmail</td>
                <td>@user.CreateTime</td>
                <td><i class="fa fa-bars"></td>
                <td><i class="fa fa-desktop"></td>
            </tr>
            }


            @*<tr>
                    <td>@ViewBag.A1</td>
                    <td>@ViewBag.B1</td>
                    <td>@ViewBag.C1</td>
                    <td><i class="far far-bars"></td>
                    <td><i class="far far-desktop "></td>
                </tr>
                <tr>
                    <td>@ViewData["A1"]</td>
                    <td>@ViewData["B2"]</td>
                    <td>@ViewData["C2"]</td>
                    <td><i class="far far-bars"></td>
                    <td><i class="far far-desktop "></td>
                </tr>*@
        </table>
        <table>
            <tr>
                <td style="width:30px"><a href="/Management/Users?V@(ViewBag.PageGroup)"><div style="background-color:black;color:white">&lt;&lt;</div></a></td>
                @for (int i = 0; i < ViewBag.PageNumbers; i++)
                {
                    <td style="width:30px"><a href="/Management/Users?P@(i+1+ViewBag.PageGroup*ViewBag.PageCount)"><div style="background-color:black;color:white">@(i+1 + ViewBag.PageGroup * ViewBag.PageCount)</div></a> </td>

                }

                <td style="width:30px"><a href="/Management/Users?N@(ViewBag.PageGroup)"><div style="background-color:black;color:white">&gt;&gt;</div></a></td>

            </tr>

        </table>    


    </div>
</div>
